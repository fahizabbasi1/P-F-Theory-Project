#include <iostream>
#include <fstream>
#include <string>
using namespace std;

const int MAX_STUDENTS = 100;

struct Student {
    string name;
    int rollNo;
    int age;
    string department;
};

void addStudent(Student students[], int &count) {
    if (count >= MAX_STUDENTS) {
        cout << "Maximum number of students reached!" << endl;
        return;
    }

    Student newStudent;
    cout << "Enter student name: ";
    cin.ignore();
    getline(cin, newStudent.name);
    cout << "Enter roll number: ";
    cin >> newStudent.rollNo;
    cout << "Enter age: ";
    cin >> newStudent.age;
    cout << "Enter department: ";
    cin.ignore();
    getline(cin, newStudent.department);

    students[count] = newStudent;
    count++;
    cout << "Student added successfully!" << endl;
}

void displayStudents(const Student students[], int count) {
    if (count == 0) {
        cout << "No students available." << endl;
        return;
    }

    cout << "\nStudent List:\n";
    cout << "Name\tRoll No\tAge\tDepartment\n";
    for (int i = 0; i < count; i++) {
        cout << students[i].name << "\t" << students[i].rollNo << "\t" << students[i].age << "\t" << students[i].department << endl;
    }
}

void saveToFile(const Student students[], int count) {
    ofstream file("students.txt");

    if (!file) {
        cout << "Error opening file!" << endl;
        return;
    }

    for (int i = 0; i < count; i++) {
        file << students[i].name << "\n";
        file << students[i].rollNo << "\n";
        file << students[i].age << "\n";
        file << students[i].department << "\n";
    }

    file.close();
    cout << "Data saved to file successfully!" << endl;
}

void loadFromFile(Student students[], int &count) {
    ifstream file("students.txt");

    if (!file) {
        cout << "No data file found!" << endl;
        return;
    }

    while (file && count < MAX_STUDENTS) {
        Student student;
        getline(file, student.name);
        if (student.name.empty()) break; // Exit if end of file
        file >> student.rollNo;
        file >> student.age;
        file.ignore();
        getline(file, student.department);
        students[count] = student;
        count++;
        file.ignore();
    }

    file.close();
    cout << "Data loaded from file successfully!" << endl;
}

int main() {
    Student students[MAX_STUDENTS];
    int studentCount = 0;

    // Load data from file at the beginning
    loadFromFile(students, studentCount);

    int choice;
    do {
        cout << "\nStudent Portal Menu\n";
        cout << "1. Add Student\n";
        cout << "2. Display Students\n";
        cout << "3. Save Students to File\n";
        cout << "4. Load Students from File\n";
        cout << "5. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                addStudent(students, studentCount);
                break;
            case 2:
                displayStudents(students, studentCount);
                break;
            case 3:
                saveToFile(students, studentCount);
                break;
            case 4:
                loadFromFile(students, studentCount);
                break;
            case 5:
                cout << "Exiting program..." << endl;
                break;
            default:
                cout << "Invalid choice! Please try again." << endl;
        }
    } while (choice != 5);

    return 0;
}
